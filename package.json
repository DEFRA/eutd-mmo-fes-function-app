{
  "name": "defra-mmo-function",
  "description": "Defra MMO Function to Replace CRON",
  "engines": {
    "node": ">=22.0.0 <23.0.0",
    "npm": "~10.9.2"
  },
  "scripts": {
    "pretest": "rm -rf coverage/ || true",
    "test": "jest mmo-fes-functionapp/ --coverage",
    "test:ci": "jest mmo-fes-functionapp/ --runInBand --watchAll=false --reporters=default --reporters=jest-junit --coverage --ci",
    "test-vstack": "jest mmo-fes-functionapp/ --coverage",
    "prepare": "husky"
  },
  "author": "Defra",
  "dependencies": {
    "applicationinsights": "^2.9.6",
    "axios": "^1.11.0",
    "fs": "0.0.1-security",
    "https": "^1.0.0",
    "mongodb": "^6.13.0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "jest": "^29.7.0",
		"jest-junit": "16.0.0",
    "jest-cli": "^29.7.0"
  },
  "jest": {
		"moduleNameMapper": {
			"^mongodb$": "<rootDir>/__mocks__/mongodb.js",
			"^axios/": "axios/dist/node/axios.cjs"
		},
    "testEnvironment": "node",
		"moduleFileExtensions": [
      "tsx",
      "ts",
      "js",
      "json"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "cobertura"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 98,
        "statements": 97
      }
    }
  }
}
